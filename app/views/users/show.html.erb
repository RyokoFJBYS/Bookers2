<%= render 'books/list', book: @book, user: @user %>

<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40,fallback: "no_image.jpg" %></td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
    </tr>
  </tbody>
</table>
