<div class = "container">
  <div class = "row">
    <div class = "col-12 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class = "form-group">
        <label>Name</label>
        <div><%= f.text_field :name %></div>
      </div>
      <div class = "form-group">
        <label for="inputImage">Image</label>
        <div><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></div>
      </div>
      <div class = "form-group">
        <label>Introduction</label>
        <div><%= f.text_area :introduction %></div>
      </div>
      <div class = "form-group">
        <button type="submit" class="btn btn-secondary">Update User</button>
        <!--<%= f.submit "Update User" %>-->
      </div>
      <% end %>
    </div>
  </div>
</div>

