<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
<label>Title</label>
<%= f.text_field :title %>
<label>Opinion</label>
<%= f.text_area :introduction %>
<%= f.submit "Update Book" %>
<div>
  <%= link_to "Show", book_path(@book.id) %><span>|</span><%= link_to "Back", books_path %>
</div>
<% end %>