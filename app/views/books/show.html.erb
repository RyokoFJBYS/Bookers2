<%= render 'books/list', book: @book %>

<h2>Book detail</h2>

<table>
  <tbody>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40,fallback: "no_image.jpg" %><br>
      <%= link_to '@user.name', user_path(current_user.id) %></td>
      <td><%= link_to '@book.title', book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>