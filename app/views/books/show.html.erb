<div class = "container px-5">
  <div class ="row">
    <div class = "col-md-3">
      <%= render 'books/list', book: @newbook, user: @user %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class = "table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40,fallback: "no_image.jpg" %>
                <br><%= @user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td>
                <%= link_to edit_book_path(@book.id), class: "btn btn-sm btn-success" do %>
                Edit
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book), method: :delete, class: "btn btn-sm btn-danger" do %>
                Destroy
                <% end %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


