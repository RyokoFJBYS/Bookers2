<%= render 'books/list', book: @book %>

<h2>Book detail</h2>

<% @books.each do |book| %>
<table>
  <tbody>
    <%= attachment_image_tag book, :profile_image %>
    <tr>
      <td><%= image_tag('') %><br>
      <%= link_to user.name, user_path(current_user.id) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      <% if @book.user == current_user %>
        <td>Edit</td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>
<% end %>